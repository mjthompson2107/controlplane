#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCWC_DC_GLOBAL_STACKS="controlplane.vcwc"
export VCWC_DC_GLOBAL_STACKNAMES="VCWC_dc_controlplane"
export VCWC_DC_GLOBAL_BOOTSTACKS="VCWC_dc_controlplane"
export VCWC_DC_GLOBAL_RUNSTACKS="VCWC_dc_controlplane"
export VCWC_DC_GLOBAL_VOLUME_LIST=""
export VCWC_DC_GLOBAL='$VCWC_DC_GLOBAL_SERVICE_NAME,$VCWC_DC_GLOBAL_IMAGE_NAME,$VCWC_DC_CONTROLPLANE_NETWORKS,$VCWC_DC_CONTROLPLANE_PORTS,$VCWC_DC_CONTROLPLANE_VOLUMES,$VCWC_DC_GLOBAL_NETWORKS,$VCWC_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCWC_DC_GLOBAL_SERVICE_NAME="${VCWC_IMAGE}"
export VCWC_DC_GLOBAL_IMAGE_NAME="${VCWC_IMAGE}.${VCWC_FLAVOR}:${VCWC_TAG}"
export VCWC_DC_CONTROLPLANE_PORTS=
export VCWC_DC_CONTROLPLANE_NETWORKS=
export VCWC_DC_CONTROLPLANE_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock','controlplane_repos_${DOLLAR}{VCWC_DC_GLOBAL_STACKNAMES}:/vcwc/pwd'"
export VCWC_DC_GLOBAL_NETWORKS=
export VCWC_DC_GLOBAL_VOLUMES="controlplane_repos_${DOLLAR}{VCWC_DC_GLOBAL_STACKNAMES}: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS controlplane.vcwc
export VCWC_DC_CONTROLPLANE_COMMAND="'--keepalive:0','.invoke console start-registry'"
export VCWC_DC_BASH_COMMAND_INTERACTIVE="true" # enable command entry - from modeco onward
export VCWC_DC_CONTROLPLANE_ENVIRONMENT=
export VCWC_DC_CONTROLPLANE_DEPLOY_MODE="replicated"
export VCWC_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCWC_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS controlplane.vcwc

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
