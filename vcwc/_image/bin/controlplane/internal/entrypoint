#!/usr/bin/env bash
export PATH="/vcwc/bin/controlplane:${PATH}"
export VCWC_EXECUTIONPLANE_ORIGINALPATH="/vcwc/bin/controlplane:$VCWC_EXECUTIONPLANE_ORIGINALPATH"
export VCWC_EXECUTIONPLANE_BASEPATH=$VCWC_EXECUTIONPLANE_ORIGINALPATH

export VCWC_EXECUTIONTAG=$(create-random)

# extract registry from image name of running cli container
if [[ "$(docker container ls )" != "" ]] ; then
  while [[ "$(docker container ls | grep vcwc/controlplane )" == "" ]] ;
  do
    sleep 1
  done;
  imagePrefix="$(docker container ls | grep vcwc/controlplane | awk '{ print $2 }' FS=' ' | awk '{ print $1 }' FS='/controlplane.' )"
  registry="$( echo "${imagePrefix/${VCWC_REALM}/}" | cut -d$'\n' -f 1)"
  export VCWC_REGISTRY="$registry"
fi
