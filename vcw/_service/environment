#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VWC_DC_GLOBAL_STACKS="controlplane.vcw"
export VWC_DC_GLOBAL_STACKNAMES="VWC_dc_controlplane"
export VWC_DC_GLOBAL_BOOTSTACKS="VWC_dc_controlplane"
export VWC_DC_GLOBAL_RUNSTACKS="VWC_dc_controlplane"
export VWC_DC_GLOBAL_VOLUME_LIST=""
export VWC_DC_GLOBAL='$VWC_DC_GLOBAL_SERVICE_NAME,$VWC_DC_GLOBAL_IMAGE_NAME,$VWC_DC_CONTROLPLANE_NETWORKS,$VWC_DC_CONTROLPLANE_PORTS,$VWC_DC_CONTROLPLANE_VOLUMES,$VWC_DC_GLOBAL_NETWORKS,$VWC_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
export VWC_DC_GLOBAL_SERVICE_NAME="${VWC_IMAGE}"
export VWC_DC_GLOBAL_IMAGE_NAME="${VWC_IMAGE}.${VWC_FLAVOR}:${VWC_TAG}"
export VWC_DC_CONTROLPLANE_PORTS=
export VWC_DC_CONTROLPLANE_NETWORKS=
export VWC_DC_CONTROLPLANE_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock','controlplane_repos_${DOLLAR}{VWC_DC_GLOBAL_STACKNAMES}:/vcw/pwd'"
export VWC_DC_GLOBAL_NETWORKS=
export VWC_DC_GLOBAL_VOLUMES="controlplane_repos_${DOLLAR}{VWC_DC_GLOBAL_STACKNAMES}: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS controlplane.vcw
export VWC_DC_CONTROLPLANE_COMMAND="'--keepalive:0','.invoke console start-registry'"
export VWC_DC_BASH_COMMAND_INTERACTIVE="true" # enable command entry - from modeco onward
export VWC_DC_CONTROLPLANE_ENVIRONMENT=
export VWC_DC_CONTROLPLANE_DEPLOY_MODE="replicated"
export VWC_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VWC_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS controlplane.vcw

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
