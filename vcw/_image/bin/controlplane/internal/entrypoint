#!/usr/bin/env bash
export PATH="/vcw/bin/controlplane:${PATH}"
export VWC_EXECUTIONPLANE_ORIGINALPATH="/vcw/bin/controlplane:$VWC_EXECUTIONPLANE_ORIGINALPATH"
export VWC_EXECUTIONPLANE_BASEPATH=$VWC_EXECUTIONPLANE_ORIGINALPATH

export VWC_EXECUTIONTAG=$(create-random)

# extract registry from image name of running cli container
if [[ "$(docker container ls )" != "" ]] ; then
  while [[ "$(docker container ls | grep vcwc/controlplane )" == "" ]] ;
  do
    sleep 1
  done;
  imagePrefix="$(docker container ls | grep vcwc/controlplane | awk '{ print $2 }' FS=' ' | awk '{ print $1 }' FS='/controlplane.' )"
  registry="$( echo "${imagePrefix/${VWC_REALM}/}" | cut -d$'\n' -f 1)"
  export VWC_REGISTRY="$registry"
fi
